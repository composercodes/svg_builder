<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for SVG Builder -->
    <record id="svg_builder_view_form" model="ir.ui.view">
        <field name="name">svg.builder.form</field>
        <field name="model">svg.builder</field>
        <field name="arch" type="xml">
            <form string="SVG Builder">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="SVG Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="width" />
                            <field name="height" />
                        </group>
                        <group>
                            <!-- Using the colorpicker widget for background_color -->
                            <field name="background_color" widget="color" />
                        </group>
                    </group>
                    <notebook>
                        <page string="SVG Builder">
                            <!-- This div will host the Owl SVG Builder Component -->
                            <!-- The data-record-id is crucial for the JS component to know which record to load/save -->
                            <div class="svg-builder-container">
                                <widget name="svg_builder" />
                            </div>
                        </page>
                        <page string="SVG Code">
                            <field name="svg_content" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for SVG Builder -->
    <record id="svg_builder_view_tree" model="ir.ui.view">
        <field name="name">svg.builder.tree</field>
        <field name="model">svg.builder</field>
        <field name="arch" type="xml">
            <list string="SVG Builder">
                <field name="name"/>
                <field name="width"/>
                <field name="height"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <!-- Action for SVG Builder -->
    <record id="svg_builder_action" model="ir.actions.act_window">
        <field name="name">SVG Builder</field>
        <field name="res_model">svg.builder</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SVG
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="svg_builder_menu_root" name="SVG Builder"
              web_icon="svg_builder,static/description/icon.png"
              sequence="10"/>

    <menuitem id="svg_builder_menu_main"
              name="SVG Builder"
              parent="svg_builder_menu_root"
              action="svg_builder_action"
              sequence="10"/>


</odoo>

